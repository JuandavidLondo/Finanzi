<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/menu_color">

    <TextView
        android:id="@+id/mi_texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="@android:color/black"
        android:shadowRadius="10"
        android:text="UPS..."
        android:textColor="#F84234"
        android:textSize="40dp"
        android:textStyle="bold"
        android:translationY="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="SIguelo intentado, tu puedes!"
        android:textColor="#000000"
        android:textSize="20dp"
        android:translationY="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mi_texto" />

    <View
        android:id="@+id/rectangulo"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="#F2F2F2"
        android:translationY="25dp"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        tools:layout_editor_absoluteX="15dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="268dp"
        android:layout_height="46dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/rojo"
        android:drawableRight="@drawable/proximo__2__1"
        android:elevation="20dp"
        android:paddingStart="50dp"
        android:paddingEnd="49dp"
        android:text="Sguiente"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:translationY="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>