<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditPerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Editar Perfil"
            android:textColor="#000000"
            android:textSize="36sp"
            android:textStyle="bold"
            android:translationY="80dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="65dp"
            android:text="Nombre"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="normal"
            android:translationY="150dp" />

        <EditText
            android:id="@+id/NombreEdit"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/lineas_de_texto"
            android:drawableStart="@drawable/usuario"
            android:drawablePadding="8dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="16dp"
            android:hint="Ingrese su nombre"
            android:textColor="#7a7a7a"
            android:translationY="160dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="65dp"
            android:text="Apellidos"
            android:textColor="#000000"
            android:textSize="15dp"
            android:translationY="240dp" />

        <EditText
            android:id="@+id/apellidoedit"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/lineas_de_texto"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Ingrese su apellido"
            android:drawableStart="@drawable/usuario"
            android:paddingLeft="16dp"
            android:drawablePadding="8dp"
            android:textColor="#7a7a7a"
            android:translationY="250dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo"
            android:textColor="#000000"
            android:textSize="15dp"
            android:translationY="330dp"
            android:paddingStart="65dp"/>

        <EditText
            android:id="@+id/correoedit"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/lineas_de_texto"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="Ingrese su correo"
            android:drawableStart="@drawable/sobre_de_correo_electronico"
            android:paddingLeft="16dp"
            android:drawablePadding="8dp"
            android:textColor="#7a7a7a"
            android:translationY="340dp"
            />
        <Button
            android:id="@+id/Btnguardar"
            android:layout_width="216dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/inicio_finanzi"
            android:text="Guardar Cambios"
            android:textAllCaps="false"
            android:textSize="15dp"
            android:textStyle="bold"
            android:translationY="390dp"
            app:backgroundTint="@null"
            app:cornerRadius="400dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>