<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View

        android:id="@+id/view"
        android:layout_width="100dp"
        android:layout_height="16dp"
        android:background="#348BF8"
        android:translationY="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:src="@drawable/finanzi_titulo_bien"
        android:translationY="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <View

        android:id="@+id/view2"
        android:layout_width="100dp"
        android:layout_height="16dp"
        android:background="#420594"
        android:translationY="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="-126dp">



        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="96dp"
            android:text="Iniciar sesión"
            android:textColor="#000000"
            android:textSize="36sp"
            android:textStyle="bold"
            android:translationY="80dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="65dp"
            android:paddingTop="70dp"
            android:paddingEnd="16dp"
            android:text="Usuario"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="normal"
            android:translationY="40dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <EditText
            android:id="@+id/Editcorreo"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:elevation="20dp"
            android:hint="Usuario"
            android:drawablePadding="8dp"
            android:background="@drawable/lineas_de_texto"
            android:drawableStart="@drawable/usuario"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:paddingStart="16dp"
            android:translationY="26dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="65dp"
            android:text="Contraseña"
            android:textColor="#000000"

            android:translationY="50dp" />

        <Button
            android:id="@+id/BtniniciarCorreo"
            android:layout_width="216dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/inicio_finanzi"
            android:text="Iniciar"
            android:textAllCaps="false"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:translationY="220dp"
            app:backgroundTint="@null"
            app:cornerRadius="400dp" />

        <EditText
            android:id="@+id/Editcontraseña"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/lineas_de_texto"
            android:drawableStart="@drawable/bloquear_3"
            android:elevation="20dp"
            android:hint="Contraseña"
            android:drawablePadding="8dp"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingStart="16dp"
            android:translationY="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtclickolviContra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="50dp"
                android:text="¿Olvidaste tu contraseña?"
                android:textColor="#348BF8"
                android:textSize="15dp"
                android:textStyle="normal"
                android:translationY="20dp" />

            <TextView
                android:id="@+id/txtclickCrearcuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="50dp"
                android:text="Crear cuenta"
                android:textColor="#348BF8"
                android:textSize="15dp"
                android:textStyle="normal"
                android:translationY="25dp"
                android:clickable="true" />

            <Button
                android:id="@+id/btnGoogle"
                android:layout_width="216dp"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:text="Continuar con google"
                android:textAllCaps="false"
                android:textSize="15dp"
                android:textStyle="bold"
                android:translationY="140dp"
                app:cornerRadius="400dp"
                android:paddingStart="10dp"
                android:drawableStart="@drawable/google_1"
                android:background="@drawable/botongoogl">

            </Button>

            <TextView
                android:id="@+id/textViewRespuesta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "respuesta"
                android:textSize="19dp"
                android:layout_marginTop="50dp"
                android:textColor="@color/black"
                android:visibility="invisible"
                android:translationY="120dp"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>